#include<iostream>
#include<fstream>
using namespace std;

void f1(int arr[], int n, int* result) {
   for (int i = 0; i < n; i++) {
      result[i + 1] = arr[i] * 5;
   }
}

void f2(float arr[], int n, float* result) {
   for (int i = 0; i < n; i++) {
      result[i + 6] = arr[i] * arr[i];
   }
}

int main() {
   int a = 1234, i, n1, n2;
   cout << "n1?" << endl;
   cin >> n1;
   cout << "n2?" << endl;
   cin >> n2;
   int* array1 = new int[n1];
   float* array2 = new float[n2];
   int* answer;
   answer = new int[11];

   for (i = 0; i < n1; i++) {
      cout << "array1[" << i << "]" << "is? (1000<=input<=5000)" << endl;
      cin >> array1[i];
   }
   for (i = 0; i < n2; i++) {
      cout << "array2[" << i << "]" << "is?" << endl;
      cin >> array2[i];
   }

   answer[0] = a;
   f1(array1, n1, answer);
   f2(array2, n2, (float*)answer);

   ofstream mybin;
   mybin.open("mybin.dat", ios::binary | ios::out);
   mybin.write((char*)answer, sizeof(int) * (1 + n1 + n2));
   mybin.close();

   delete answer;

   return 1;
}
